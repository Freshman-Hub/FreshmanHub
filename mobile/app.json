{
  "expo": {
    "name": "FreshmanHub",
    "slug": "freshmanhub-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/freshman-hub-logo.png",
    "scheme": "mobile",
    "userInterfaceStyle": "automatic",
    "fonts": [
      "./src/assets/fonts/Poppins-Regular.ttf",
      "./src/assets/fonts/Poppins-Medium.ttf",
      "./src/assets/fonts/Poppins-SemiBold.ttf",
      "./src/assets/fonts/Poppins-Bold.ttf",
      "./src/assets/fonts/Inter-Regular.ttf",
      "./src/assets/fonts/Inter-Medium.ttf",
      "./src/assets/fonts/Inter-SemiBold.ttf",
      "./src/assets/fonts/Inter-Bold.ttf"
    ],
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ashesi.edu.gh.freshmanhub"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "package": "ashesi.edu.gh.freshmanhub"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
